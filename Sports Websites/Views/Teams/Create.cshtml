@using Sports_Websites.Models
@model Team

<h1>Create Team</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" value="@Model?.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control" value="@Model?.Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Logo">Logo:</label>
        <input asp-for="Logo" class="form-control" value="@Model?.Logo"></input>
        <span asp-validation-for="Logo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OfficialWebsiteURL">OfficialWebsiteURL:</label>
        <input asp-for="OfficialWebsiteURL" class="form-control" value="@Model?.OfficialWebsiteURL"></input>
        <span asp-validation-for="OfficialWebsiteURL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FoundationDate">FoundationDate:</label>
        <input asp-for="FoundationDate" class="form-control" value="@Model?.FoundationDate"></input>
        <span asp-validation-for="FoundationDate" class="text-danger"></span>
    </div>
    @if (Model == null)
    {
        <button type="submit" class="btn btn-primary">Create</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Edit</button>
    }
</form>




